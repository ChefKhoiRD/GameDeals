<div>
    <div class="flex justify-center py-3 text-4xl text-slate-800">
        <h2>Search for a game</h2>
    </div>
</div>

<div>
    <div class="flex justify-center border-red-500">
        <form class="form search-game-form" id="game-search">
            <div>
                <input class="form-input bg-gray-200 border-2 py-1 border-black" type="text" name="game-search" placeholder="Search" id="game-title" />
                <button type="submit"  class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" >Submit</button>
            </div>
        </form>
    </div>
</div>

{{#if games.length}}
{{#each games as |game|}}
<div class="flex flex-col items-center justify-center" id="appendCard">
    <img src="{{games.thumb}}"
    class="p-1 border rounded object-scale-down h-20 w-20"
    alt="thumbnail for game image">
        
    <div class="pb-5 text-4xl">
        <a href="/search/{{games.id}}">{{games.gtitle}}</a>
    </div>
</div>
{{/each}}
{{/if}}

<script src="./js/search.js"></script>