<div>
    <div class="flex justify-center py-3 text-4xl text-slate-800">
        <h2>Search for a game</h2>
    </div>
</div>

<div>
    <div class="flex justify-center border-red-500">
        <form class="form search-game-form ">
            <div>
                <input class="form-input bg-gray-200 border-2 py-1 border-black" type="text" name="game-search" placeholder="Search" />
                <button type="submit"  class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" >Submit</button>
            </div>
        </form>
    </div>
</div>

{{#if games.length}}
{{#each games as |game|}}
<div>
    <div>
        <p>
            <img {{game.thumb}}>
        </p>
        <p>
            <a href="/search/{{game.id}}">{{game.title}}></a>
        </p>
    </div>
</div>
{{/each}}
{{/if}}