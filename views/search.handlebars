<div class="flex flex-col items-center justify-center">
    
    <img src="{{this.thumb}}"
    class="p-1 bg-yellow-300 border rounded max-w-sm"
    alt="thumbnail for game">
    
    <div class="pb-5 text-5xl">
        <h2>{{this.gtitle}}</h2>
    </div>
    <div>
        <button type='button' class="bg-yellow-300 hover:bg-yellow-500 text-white font-bold py-2 px-4 rounded" id="addFavorite">Add to Favorites</button>
    </div>
</div>

<div class="flex justify-center p-4">    
    <table class="table-auto w-2/5 h-40 border-spacing-3 border border-4 border-yellow-300">
        <thead>
            <tr>
                <th class="font-bold p-2 border-b text-left bg-blue-800 text-white">Store</th>
                <th class="font-bold p-2 border-b text-left bg-blue-800 text-white">Price</th>
            </tr>
        </thead>
        <tbody>
            <tr class="font-bold py-2 px-4 border-b border-1 text-left hover:bg-white">
                <td>Steam</td>
                <td>{{this.steamPrice}}</td>
            </tr>
            <tr class="font-bold py-2 px-4 border-b border-1 text-left hover:bg-white">
                <td >Humble Store</td>
                <td>{{this.humblePrice}}</td>
            </tr>
            <tr class="font-bold py-2 px-4 border-b border-1 text-left hover:bg-white">
                <td>GOG</td>
                <td>{{this.gogPrice}}</td>
            </tr>
        </tbody>
    </table>
</div>

<script src='../js/search.js'></script>
<script src='../js/favorites.js'></script>